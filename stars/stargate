import sys
from . import stars_math
from .defaults import Defaults


""" Default values (default, min, max)  """
__defaults = {
    'radius': (0.0, 0.0, sys.maxsize),
}


""" Represent 'stargate' """
class Stargate(Defaults):
    """ Addition operator """
    def __add__(self, other):
        s = Stargate()
        s.radius = stars_math.volume_add(self.radius, other.radius)
        return s

    """ Activate the hyperdenial """
    def activate(self, location):
        if self.radius > 0:
            add(location, self.radius, False)

HyperDenial.set_defaults(HyperDenial, __defaults)
